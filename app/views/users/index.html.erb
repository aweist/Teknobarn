<div class='container-fluid'>
  <p id="notice"><%= notice %></p>

  <h1>All users</h1>

  <table class="table table-striped users" cellspacing=0 cellpadding = 0>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
      <th>RSVP</th>
      <th>Clicked</th>
      <th></th>
      <th></th>
    </tr>
    <% @users.each_with_index do |user, index| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.full_name %></td>
        <td><%= user.email %></td>
        <td><%= user.rsvp %></td>
        <td><%= user.clicked_invite %></td>
        <td>
          <%= link_to edit_user_path(user) do %>
            <span class='glyphicon glyphicon-pencil'></span>
          <% end %>
        </td>
        <td>
          <%= link_to edit_user_path(user.id) do %>
            <span class='glyphicon glyphicon-remove'></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
  <div>Attending: <%= @users.where(rsvp: true).count %></div>
</div>
